<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <!-- Създаваме ScrollView за да можем да разглждате повече рецепти -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Видове кухнии! -->
        <!-- Здравословна кухния -->
            <TextView
                android:id="@+id/meat_textview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/healthy_cooking_string"
                android:textSize="35sp"
                android:background="@drawable/healthy_cooking"
                android:textColor="#FFFFFF"
                android:onClick="beHealthy"
                android:shadowRadius="4"
                android:shadowDy="4"
                android:shadowDx="4"
                android:shadowColor="#000"/>
        <!-- Италианска кухния! -->
            <TextView
                android:id="@+id/italian_cooking"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/italian_cooking_string"
                android:textSize="35sp"
                android:background="@drawable/italian_cooking"
                android:textColor="#FFFFFF"
                android:onClick="beItalian"
                android:shadowRadius="4"
                android:shadowDy="4"
                android:shadowDx="4"
                android:shadowColor="#000"/>
        <!-- Азиатска кухния! -->
            <TextView
                android:id="@+id/asian_cooking"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/asian_cooking_string"
                android:textSize="35sp"
                android:background="@drawable/asian_cooking"
                android:textColor="#FFFFFF"
                android:onClick="beAsian"
                android:shadowRadius="4"
                android:shadowDy="4"
                android:shadowDx="4"
                android:shadowColor="#000"/>
        <!-- Френска кухния! -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/french_cooking_string"
            android:textSize="35sp"
            android:background="@drawable/french_cooking"
            android:textColor="#FFFFFF"
            android:onClick="beFrench"
            android:shadowRadius="4"
            android:shadowDy="4"
            android:shadowDx="4"
            android:shadowColor="#000"/>
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>